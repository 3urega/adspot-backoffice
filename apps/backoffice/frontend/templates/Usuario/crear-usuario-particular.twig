{% extends '@backoffice/base.twig' %}

{% block title %}Crear Usuario{% endblock %}
{% block pageTitle %}Crear Usuario Particular{% endblock %}

{% block main %}
    <div class="row">
        <div class="col">
            {% embed "@backoffice/embed/card.twig" %}
                {% block cardBody %}
                    {{ backoffice_form_start(null, path('crear_usuario_particular_submit')) }}
                        <div class="row">
                            <div class="col-md-6 px-4">
                                {{ backoffice_form_input_text(
                                    request,
                                    'Nombre',
                                    'nombre',
                                    placeholder = 'Introduce el nombre del usuario'
                                ) }}
                                {{ backoffice_form_input_text(
                                    request,
                                    'Correu electrònic',
                                    'email',
                                    type= 'email',
                                    placeholder = 'Correo electrónico'
                                ) }}
                                {{
                                    backoffice_form_input_password(
                                        request,
                                        'Contraseña',
                                        'password',
                                        'password',
                                        true
                                    )
                                }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col p-4 d-flex">
                                <button class="btn btn-success text-white">Crear</button>
                                
                                {# 
                                    <a href="{{ path('ui_backoffice_reenviar_correo_bienvenida_usuario', {
                                        'userId': usuario.id.asString
                                    }) }}" class="btn btn-info ml-2">
                                        <i class="fas fa-envelope fa-sm mr-2"></i>Enviar notificación
                                    </a>
                                    {{ _button_by_estado_usuario(usuario) }}
                                    <a id="delete_user_btn" class="btn btn-danger ml-auto" href="{{ path('ui_backoffice_eliminar_usuario', { 'id': usuario.id.asString }) }}"><i class="fas fa-user-times fa-sm mr-2"></i>Eliminar usuario</a>
                                 #}
                            </div>
                        </div>
                    <input type="hidden" name="id" value="{{ request.id }}">
                    {{ backoffice_form_end(request) }}
                {% endblock %}
            {% endembed %}
        </div>
    </div>
{% endblock main %}

{% block bottomJavascripts %}
    <script>
        {# config.usuario = {
            altaEventosRol: '{{ request.altaEventosRol }}'
        } #}
    </script>
    {{ encore_entry_script_tags('js/usuario-particular/formulario/index') }}
{% endblock %}
